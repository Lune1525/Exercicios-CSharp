using System; 

       class CalculaArea
    {
        private const double n = 3.14159;

        public double raio;

        public double CalculoRaio()
        {
            return Math.Pow(raio, 2);
        }
        public double Area ()
        {
            return n * CalculoRaio();
        }

    }

    static void Main(string[] args) { 
        
        System.Threading.Thread.CurrentThread.CurrentCulture = new System.Globalization.CultureInfo("en-US");

        CalculaArea valorRaio = new CalculaArea();
        valorRaio.raio = Convert.ToDouble(Console.ReadLine());
        double area = valorRaio.Area();
        
        Console.WriteLine($"A={area.ToString("F4")}");
    }
